  <body>
    <img
      src="https://cdn.pixabay.com/photo/2018/01/03/09/09/book-3057904_960_720.png"
      alt=""
      ,
      width="500"
    />
    <h1><%=result[0].book_name%></h1>
  </body>
</html>

<script>
  exports.getBookDetail = (req, res) => {
    var jsonData = document.getElementByID("myData");
    var myJsonData = JSON.parse(jsonData);

    db.query(
      "SELECT * FROM book WHERE book_id = ?",
      [myJsonData],
      function (err, result) {
        if (err) throw err;
        res.render("book_detail", { result });
      }
    );
  };
</script>
